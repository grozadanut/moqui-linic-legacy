<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">
    <service verb="find" noun="AnafInvoices" type="script"
             location="classpath://ro/colibri/legacy/service/findAnafInvoices.groovy">
        <in-parameters>
            <parameter name="start" type="Timestamp" required="true"/>
            <parameter name="end" type="Timestamp" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="resultList" type="List">
            </parameter>
        </out-parameters>
    </service>
    <service verb="find" noun="AnafInvoiceLines" type="script"
             location="classpath://ro/colibri/legacy/service/findAnafInvoiceLines.groovy">
        <in-parameters>
            <parameter name="systemMessageId" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="resultList" type="List">
            </parameter>
        </out-parameters>
    </service>

    <service verb="consume" noun="AnafInvoice" type="script"
             location="classpath://ro/colibri/legacy/service/consumeAnafInvoice.groovy">
        <in-parameters>
            <parameter name="systemMessageId" required="true"/>
            <parameter name="messageDate" type="Date"/>
            <parameter name="messageText" allow-html="any"/>
        </in-parameters>
    </service>
    <service verb="expand" noun="AnafInvoiceLines" type="script"
             location="classpath://ro/colibri/legacy/service/expandAnafInvoiceLines.groovy">
        <in-parameters>
            <parameter name="systemMessageId" required="true"/>
        </in-parameters>
    </service>

    <service verb="receive" noun="AnafInvoice">
        <description>Marks the message as SmsgConfirmed and links it with the Invoice id if present</description>
        <in-parameters>
            <parameter name="systemMessageId" required="true"/>
            <parameter name="invoiceId"/>
        </in-parameters>
        <actions>
            <entity-find-one entity-name="moqui.service.message.SystemMessage" value-field="systemMessage"/>

            <if condition="systemMessage.statusId != 'SmsgConsumed'">
                <return error="true" message="System message [${systemMessageId}] has status [${systemMessage.statusId}] and must be SmsgConsumed, not receiving."/></if>

            <if condition="systemMessage.systemMessageTypeId != 'ANAFReceivedInvoice'">
                <return error="true" message="System message [${systemMessageId}] has message type [${systemMessage.systemMessageTypeId}] and must be ANAFReceivedInvoice, not receiving."/></if>

            <service-call name="update#moqui.service.message.SystemMessage"
                          in-map="[systemMessageId:systemMessageId, statusId:'SmsgConfirmed',
                                processedDate:nowDate]"/>

            <if condition="invoiceId != null">
                <service-call name="create#mantle.account.invoice.Invoice"
                              in-map="[invoiceId:invoiceId]"/>
                <service-call name="create#mantle.account.invoice.InvoiceSystemMessage"
                              in-map="[systemMessageId:systemMessageId, invoiceId:invoiceId]"/>
            </if>
        </actions>
    </service>

    <service verb="receive" noun="AnafInvoiceLine" type="script"
             location="classpath://ro/colibri/legacy/service/receiveAnafInvoiceLine.groovy">
    <description>Marks the line message as SmsgConfirmed and updates product supplier id</description>
    <in-parameters>
        <parameter name="systemMessageId" required="true"/>
        <parameter name="invoiceId"/>
        <parameter name="supplierId"/>
        <parameter name="productId"/>
        <parameter name="facilityPartyId"/>
        <parameter name="supplierProductId"/>
        <parameter name="supplierProductName"/>
    </in-parameters>
    </service>
</services>