<!-- General Guideline Verbs: GET=find, POST=create/do, PUT=store (create or update), PATCH=update, DELETE=delete  -->

<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-3.xsd"
        name="moqui-linic-legacy" displayName="moqui-linic-legacy API" version="0.0.0" description="">

    <!-- moqui-linic-legacy & Related Rest API -->
    <resource name="products" description="Products - Finished Goods, Materials, Supplies, Equipment, etc">
        <resource name="suppliers">
            <method type="get"><service name="LegacyServices.find#ProductSuppliers"/></method>
            <method type="put"><service name="LegacyServices.set#MainProductSuppliers"/></method>
        </resource>
        <resource name="facility">
            <method type="put"><service name="LegacyServices.set#ProductFacility"/></method>
        </resource>
    </resource>

    <resource name="suppliers" description="Get the list of current registered suppliers">
        <method type="get"><service name="LegacyServices.get#Suppliers"/></method>
        <resource name="product" description="Find Products by Supplier ID">
            <method type="get"><service name="AnafServices.find#ProductBySupplierId"/></method>
        </resource>
    </resource>

    <resource name="anafInvoices" description="API for ANAF eFactura invoices">
        <method type="get"><service name="AnafServices.find#AnafInvoices"/></method>
        <resource name="receive" description="Mark ANAF eFactura invoice as received">
            <method type="post"><service name="AnafServices.receive#AnafInvoice"/></method>
        </resource>
    </resource>
    <resource name="anafInvoiceLines" description="Get Invoice lines from an ANAF eFactura invoice">
        <method type="get"><service name="AnafServices.find#AnafInvoiceLines"/></method>
        <resource name="receive">
            <method type="post"><service name="AnafServices.receive#AnafInvoiceLine"/></method>
        </resource>
    </resource>
</resource>
